{%- set type = type|default('success') -%}
{%- set attr = attr|default({})|merge({class: (attr.class|default('') ~ ' toast toast-' ~ type)|trim}) -%}

<div{% for attrname, attrvalue in attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %} role="alert" aria-live="assertive" aria-atomic="true" data-delay="10000">
    <div class="toast-header">
        <strong class="mr-auto">PollHQ</strong>
        <small>11 mins ago</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        {% block content %}{{ content|default('') }}{% endblock %}
    </div>
</div>