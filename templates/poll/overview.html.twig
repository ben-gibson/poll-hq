{% extends '@view/poll/base.html.twig' %}

{% block page_content %}

    <div class="row">
        <div class="col-lg-8">
            {% embed '@partial/card.html.twig' with {'title': poll.name, 'subTitle': poll.description} %}
                {% block body %}
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Id</td>
                                    <td>{{ poll.id }}</td>
                                </tr>
                                <tr>
                                    <td>Name</td>
                                    <td>{{ poll.name }}</td>
                                </tr>
                                <tr>
                                    <td>Topic</td>
                                    <td>{{ poll.topic }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="float-right">
                        <i class="fas fa-users"></i>
                    </div>
                    <h5 class="text-muted mt-0" title="Growth">Responses</h5>
                    <h3 class="mt-3 mb-3">602</h3>
                    <p class="mb-0 text-muted">
                        <span class="badge badge-secondary text-success mr-1">
                            <i class="fas fa-arrow-up"></i> 22
                        </span>
                        <span class="text-nowrap">In the last 24 hours</span>
                    </p>
                </div>
            </div>
            <div class="card bg-success heading-white text-white">
                <div class="card-body">
                    <div class="float-right">
                        <i class="fas fa-poll"></i>
                    </div>
                    <h6 class="text-uppercase mt-0">Stage</h6>
                    <h3 class="mt-3 mb-3">Collecting</h3>
                    <p class="mb-0">
                        <span class="text-nowrap">For the last
                            <span class="badge badge-secondary text-light">
                                <i class="fas fa-clock"></i> 22
                            </span>
                            hours
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
